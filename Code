using System;
using System.Collections.Generic;

namespace ExamSystem
{
    // Class representing a single Multiple Choice Question
    public class MCQ
    {
        public string Header { get; set; }
        public string Body { get; set; }
        public int Marks { get; set; }
        
        // Using Dictionary for Choices (Key: 'A', Value: "Option text")
        public Dictionary<char, string> Choices { get; set; } = new Dictionary<char, string>();
    }

    // Main Exam Class
    public class Exam
    {
        public string SubjectName { get; set; }
        public int Hours { get; set; }
        public string Code { get; set; }
        
        // Using List to store multiple questions
        public List<MCQ> Questions { get; set; } = new List<MCQ>();

        public void DisplayExamDetails()
        {
            Console.WriteLine($"Exam: {SubjectName} ({Code})");
            Console.WriteLine($"Duration: {Hours} Hours");
            Console.WriteLine("---------------------------");

            foreach (var q in Questions)
            {
                Console.WriteLine($"{q.Header}: {q.Body} ({q.Marks} Marks)");
                foreach (var choice in q.Choices)
                {
                    Console.WriteLine($"  {choice.Key}) {choice.Value}");
                }
                Console.WriteLine();
            }
        }
    }
}
